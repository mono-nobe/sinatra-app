<h2><%= @todo["title"] %></h2>

<textarea readonly rows="5" cols="40"><%= @todo["body"] %></textarea>

<div>
  <button type="button">
    <a href="/todos/<%= @todo["id"] %>/editor"><font size="2">変更</font></a>
  </button>
</div>

<div>
  <form method="post" action="/todos/<%= @todo["id"] %>" >
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="削除">
  </form>
</div>
